---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: weave-scope-app
  namespace: monitoring
  labels:
    name: weave-scope-app
    app: weave-scope
spec:
  replicas: 1
  revisionHistoryLimit: 2
  selector:
    matchLabels:
      name: weave-scope-app
      app: weave-scope
  template:
    metadata:
      labels:
        name: weave-scope-app
        app: weave-scope
    spec:
      containers:
        - name: app
          image: 'docker.io/weaveworks/scope:1.12.0'
          imagePullPolicy: IfNotPresent
          command:
            - /home/weave/scope
          args:
            - '--mode=app'
            - '--weave=false'
          ports:
            - name: http
              containerPort: 4040
              protocol: TCP
